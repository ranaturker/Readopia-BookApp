<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailFragment">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/progress_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/background"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/margin_12"
        android:text="@string/read_button"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/bookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:gravity="center"
        android:text="@string/book_name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_30"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewBook" />

    <TextView
        android:id="@+id/authorTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="@string/book_name"
        android:textColor="@color/text_author"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookName" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/imageViewBook"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_marginStart="@dimen/margin_32"
        android:layout_marginTop="@dimen/margin_32"
        android:layout_marginEnd="@dimen/margin_32"
        android:layout_marginBottom="@dimen/margin_48"
        android:scaleType="centerCrop"
        android:src="@drawable/book_wallpaper"
        app:layout_constraintBottom_toTopOf="@id/bookName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundPercent="0.3" />

    <TextView
        android:id="@+id/bookshelvesLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12"
        android:fontFamily="sans-serif-light"
        android:text="@string/bookshelves"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/card_view_second"
        app:layout_constraintTop_toBottomOf="@id/card_view_second" />
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_32"
        android:orientation="horizontal"
        android:padding="8dp"
        android:id="@+id/card_view_third"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookshelvesLabelTextView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.DetailFragment">

            <TextView
                android:id="@+id/bookshelves"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_8"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="@string/bookshelves"
                android:layout_marginStart="@dimen/margin_12"
                app:layout_goneMarginTop="@dimen/margin_12"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/contentLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12"
        android:fontFamily="sans-serif-light"
        android:text="@string/content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/card_view_first"
        app:layout_constraintTop_toBottomOf="@id/card_view_first" />

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_margin="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_32"
        android:orientation="horizontal"
        android:padding="8dp"
        android:id="@+id/card_view_second"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contentLabelTextView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.DetailFragment">

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_8"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="@string/content"
                android:layout_marginStart="@dimen/margin_12"
                app:layout_goneMarginTop="@dimen/margin_12"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_margin="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_32"
        android:orientation="horizontal"
        android:padding="8dp"
        android:id="@+id/card_view_first"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/authorTextView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.DetailFragment">

            <TextView
                android:id="@+id/downloadCountLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_24"
                android:layout_marginTop="@dimen/margin_12"
                android:fontFamily="sans-serif-light"
                android:text="@string/download_count_label"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/downloadCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="@string/download_count"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12"
                app:layout_constraintEnd_toEndOf="@id/downloadCountLabelTextView"
                app:layout_constraintStart_toStartOf="@id/downloadCountLabelTextView"
                app:layout_constraintTop_toBottomOf="@+id/downloadCountLabelTextView" />

            <TextView
                android:id="@+id/languagesLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_36"
                android:layout_marginTop="@dimen/margin_12"
                android:fontFamily="sans-serif-light"
                android:text="@string/languages_label"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/downloadCountLabelTextView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/language_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="@string/languages"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12"
                app:layout_constraintEnd_toEndOf="@id/languagesLabelTextView"
                app:layout_constraintStart_toStartOf="@id/languagesLabelTextView"
                app:layout_constraintTop_toBottomOf="@+id/languagesLabelTextView" />

            <TextView
                android:id="@+id/copyrightLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_36"
                android:layout_marginTop="@dimen/margin_12"
                android:fontFamily="sans-serif-light"
                android:text="@string/copyright_label"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/languagesLabelTextView"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewStatus"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_copyright"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/copyrightLabelTextView"
                app:layout_constraintStart_toStartOf="@id/copyrightLabelTextView"
                app:layout_constraintTop_toBottomOf="@+id/copyrightLabelTextView" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>