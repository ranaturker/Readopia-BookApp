<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.ranaturker.readopia.ui.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_listFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.ranaturker.readopia.ui.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail">
        <!--suppress NavigationFile -->
        <argument
            android:name="bookId"
            app:argType="integer" />
        <action
            android:id="@+id/action_detailFragment_to_readingFragment"
            app:destination="@id/readingFragment" />
    </fragment>
    <fragment
        android:id="@+id/readingFragment"
        android:name="com.ranaturker.readopia.ui.ReadingFragment"
        android:label="fragment_reading"
        tools:layout="@layout/fragment_reading">
        <!--suppress NavigationFile -->
        <argument
            android:name="url"
            app:argType="string" />
        <argument
            android:name="bookId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.ranaturker.readopia.ui.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen">
        <action
            android:id="@+id/action_splashScreenFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
</navigation>
